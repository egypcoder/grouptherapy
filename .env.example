# GroupTherapy Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# PostgreSQL connection string
# For Vercel: Use Vercel Postgres, Supabase, Neon, or any PostgreSQL provider
# Format: postgres://username:password@host:port/database
DATABASE_URL=postgres://user:password@localhost:5432/grouptherapy

# ===========================================
# APPLICATION SETTINGS
# ===========================================
# Node environment: development or production
NODE_ENV=development

# Port for local development (default: 5000)
PORT=5000

# Session secret for authentication (generate a random string)
# Use: openssl rand -base64 32
SESSION_SECRET=your-super-secret-session-key-here

# ===========================================
# EXTERNAL SERVICES (Optional)
# ===========================================
# Spotify API (for music catalog integration)
SPOTIFY_CLIENT_ID=your-spotify-client-id
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret

# Cloudinary (for image uploads)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Supabase (if using for storage/auth)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key

# ===========================================
# ADMIN CREDENTIALS
# ===========================================
# Default admin user (only used for initial setup)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-admin-password
ADMIN_EMAIL=admin@grouptherapy.com

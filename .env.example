
# GroupTherapy Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# PostgreSQL connection string (REQUIRED)
# Format: postgres://username:password@host:port/database
# Example: postgres://user:password@localhost:5432/grouptherapy
DATABASE_URL=postgres://user:password@localhost:5432/grouptherapy

# ===========================================
# APPLICATION SETTINGS
# ===========================================
# Node environment: development or production
NODE_ENV=development

# Port for local development (default: 5000)
PORT=5000

# Session secret for authentication (REQUIRED)
# Generate with: openssl rand -base64 32
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# ===========================================
# ADMIN CREDENTIALS (for seed-admin script)
# ===========================================
# Default admin user credentials for initial setup
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-secure-password
ADMIN_EMAIL=admin@grouptherapy.com

# ===========================================
# RATE LIMITING (Authentication)
# ===========================================
# Maximum failed login attempts before lockout (default: 5)
MAX_LOGIN_ATTEMPTS=5

# Lockout duration in minutes (default: 15)
LOCKOUT_DURATION_MINUTES=15

# ===========================================
# SPOTIFY INTEGRATION (Optional)
# ===========================================
# Spotify API credentials for music catalog integration
# Get from: https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your-spotify-client-id
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret

# ===========================================
# CLOUDINARY (Optional - for image uploads)
# ===========================================
# Cloudinary configuration for image/media management
# Get from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Client-side Cloudinary config (for direct uploads from browser)
VITE_CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
VITE_CLOUDINARY_UPLOAD_PRESET=your-upload-preset

# ===========================================
# SUPABASE (Optional - for storage/additional features)
# ===========================================
# Supabase configuration
# Get from: https://app.supabase.com
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key

# ===========================================
# PRODUCTION DEPLOYMENT (Vercel/Replit)
# ===========================================
# These are automatically set by hosting platforms
# REPLIT_DEV_DOMAIN (auto-set on Replit)
# VERCEL_URL (auto-set on Vercel)
